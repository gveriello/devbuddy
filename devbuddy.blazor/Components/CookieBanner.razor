@using Blazored.LocalStorage
@using devbuddy.common.Services
@inject ILocalStorageService LocalStorage
@inject IJSRuntime JSRuntime

@if (ShowBanner)
{
    <div class="cookie-banner p-3 bg-dark text-light fixed-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-9">
                    <p class="mb-md-0">
                        Utilizziamo cookie e tecnologie simili per migliorare la tua esperienza sul nostro sito.
                        Proseguendo nella navigazione accetti l'utilizzo dei cookie.
                        <a href="/cookie-policy" class="text-info">Maggiori informazioni</a>
                    </p>
                </div>
                <div class="col-md-3 text-md-end mt-2 mt-md-0">
                    <button @onclick="AcceptCookies" class="btn btn-primary me-2">Accetta</button>
                    <button @onclick="RejectCookies" class="btn btn-outline-light">Rifiuta</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool ShowBanner { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        var cookieConsent = await LocalStorage.GetItemAsync<string>("CookieConsent");
        ShowBanner = string.IsNullOrEmpty(cookieConsent);
    }

    private async Task AcceptCookies()
    {
        await LocalStorage.SetItemAsync("CookieConsent", "accepted");
        await JSRuntime.InvokeVoidAsync("enableAnalytics");
        ShowBanner = false;
    }

    private async Task RejectCookies()
    {
        await LocalStorage.SetItemAsync("CookieConsent", "rejected");
        await JSRuntime.InvokeVoidAsync("disableAnalytics");
        ShowBanner = false;
    }
}