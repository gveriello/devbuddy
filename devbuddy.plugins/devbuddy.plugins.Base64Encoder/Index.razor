@using devbuddy.common.Applications
@using devbuddy.common.Services
@inherits AppComponentBase

<div class="container mt-4">
    <h2 class="mb-4">Convertitore Base64</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Testo input</h5>
                    <div>
                        <button class="btn btn-primary btn-sm" @onclick="PasteFromClipboard">
                            <i class="fa-solid fa-paste"></i>
                        </button>
                        <button class="btn btn-danger btn-sm" @onclick="ClearInput">
                            <i class="fa-solid fa-eraser"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <textarea @bind="InputText" @bind:event="oninput"
                              class="form-control" rows="10" placeholder="Inserisci qui il tuo testo"></textarea>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Risultato</h5>
                    <div>
                        <button class="btn btn-secondary btn-sm" @onclick="CopyToClipboard">
                            <i class="fa-solid fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <textarea @bind="OutputText" class="form-control" rows="10" readonly></textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="conversionMode" id="encodeMode"
                               value="encode" checked="@(ConversionMode == "encode")"
                               @onchange="@(() => SetConversionMode("encode"))">
                        <label class="form-check-label" for="encodeMode">
                            Testo → Base64
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="conversionMode" id="decodeMode"
                               value="decode" checked="@(ConversionMode == "decode")"
                               @onchange="@(() => SetConversionMode("decode"))">
                        <label class="form-check-label" for="decodeMode">
                            Base64 → Testo
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="autoConvert"
                               checked="@AutoConvert"
                               @onchange="@(e => ToggleAutoConvert(e.Value))">
                        <label class="form-check-label" for="autoConvert">
                            Conversione automatica
                        </label>
                    </div>
                    <button class="btn btn-primary ms-3" @onclick="ConvertText" disabled="@AutoConvert">
                        Converti
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mt-3">
            <strong>Errore:</strong> @ErrorMessage
        </div>
    }
</div>