@using devbuddy.common.Applications
@using devbuddy.plugins.CodeMetricsAnalyzer.Models
@inherits AppComponentBase<CodeMetricsDataModel>

<div class="container">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">
                <i class="fas fa-chart-line me-2"></i>
                Code Metrics Analyzer
            </h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-folder"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Project Path" @bind="ProjectPath">
                        <button class="btn btn-outline-secondary" @onclick="BrowseFolder" title="Browse...">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                    </div>
                    <div class="form-text text-muted">Enter the path to your project folder</div>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <button class="btn btn-primary" @onclick="AnalyzeProject" disabled="@IsAnalyzing">
                            <i class="fas fa-play me-1"></i>
                            Analyze Project
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="ClearResults" disabled="@IsAnalyzing || CurrentProject == null">
                            <i class="fas fa-broom me-1"></i>
                            Clear
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <button class="btn btn-outline-secondary" @onclick="ExportReport" disabled="@(CurrentProject == null)">
                            <i class="fas fa-file-export me-1"></i>
                            Export Report
                        </button>
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" disabled="@(CurrentProject == null)">
                            <i class="fas fa-cog"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><button class="dropdown-item" @onclick="SaveToHistory">Save to History</button></li>
                            <li><button class="dropdown-item" @onclick="CompareWithHistory">Compare with Previous</button></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><button class="dropdown-item" @onclick="ConfigureRules">Configure Rules</button></li>
                        </ul>
                    </div>
                </div>
            </div>

            @if (IsAnalyzing)
            {
                <div class="text-center my-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Analyzing...</span>
                    </div>
                    <p class="mt-2">Analyzing project... This may take a while for larger projects.</p>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: @AnalysisProgress%"></div>
                    </div>
                    <p class="text-muted mt-1">@AnalysisStatusMessage</p>
                </div>
            }
            else if (CurrentProject != null)
            {
                <div class="row mb-4">
                    <div class="col">
                        <MetricsDashboard Project="@CurrentProject" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <FileTreeView Project="@CurrentProject" OnFileSelected="ShowFileDetails" />
                    </div>
                    <div class="col-md-8">
                        <MetricsDetail Project="@CurrentProject" SelectedFile="@SelectedFile" SelectedClass="@SelectedClass" SelectedMethod="@SelectedMethod" />
                    </div>
                </div>
            }
            else if (HasHistory && RecentProjects.Count > 0)
            {
                <div class="card">
                    <div class="card-header">
                        <h4>Recent Projects</h4>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var project in RecentProjects)
                            {
                                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" @onclick="() => LoadProject(project)">
                                    <div>
                                        <h5 class="mb-1">@project.ProjectName</h5>
                                        <p class="mb-1 text-muted small">@project.ProjectPath</p>
                                        <small>Analysis date: @project.AnalysisDate.ToString("yyyy-MM-dd HH:mm")</small>
                                    </div>
                                    <div>
                                        <span class="badge bg-primary rounded-pill">@project.Files.Count files</span>
                                        <span class="badge bg-warning rounded-pill">@project.Issues.Count issues</span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center my-5">
                    <div class="display-1 text-muted mb-4">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3>Welcome to Code Metrics Analyzer</h3>
                    <p class="lead text-muted">Enter a project path above and click 'Analyze Project' to get started.</p>
                    <div class="row mt-4 justify-content-center">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5>What this tool analyzes:</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i> Code complexity metrics</li>
                                    <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i> Maintainability index</li>
                                    <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i> Method length and complexity</li>
                                    <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i> Class cohesion and coupling</li>
                                    <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i> Potential code smells and issues</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (CurrentProject != null && MetricsHistory.Count > 0)
    {
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h3>Metrics History</h3>
            </div>
            <div class="card-body">
                @* <ComplexityChart HistoryData="@MetricsHistory" /> *@
            </div>
        </div>
    }
</div>

<!-- Rules Configuration Modal -->
<div class="modal fade" id="rulesConfigModal" tabindex="-1" aria-labelledby="rulesConfigModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rulesConfigModalLabel">Configure Rules</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Configure which rules to apply during analysis:</p>
                <div class="list-group">
                    @foreach (var rule in AvailableRules)
                    {
                        <div class="list-group-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="rule-@rule.Id" checked="@rule.IsEnabled" @onchange="() => ToggleRule(rule.Id)">
                                <label class="form-check-label" for="rule-@rule.Id">
                                    <strong>@rule.Title</strong>
                                    <span class="badge bg-@GetSeverityBadgeClass(rule.Severity) ms-2">@rule.Severity</span>
                                </label>
                            </div>
                            <p class="text-muted small mb-0">@rule.Description</p>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" @onclick="SaveRulesConfig" data-bs-dismiss="modal">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- History Comparison Modal -->
<div class="modal fade" id="historyCompareModal" tabindex="-1" aria-labelledby="historyCompareModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="historyCompareModalLabel">Compare with Previous Analysis</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (HistoryProjects.Count > 0)
                {
                    <div class="mb-3">
                        <label for="historySelectDropdown" class="form-label">Select a previous analysis to compare with:</label>
                        <select class="form-select" id="historySelectDropdown" @bind="SelectedHistoryProjectId">
                            @foreach (var project in HistoryProjects)
                            {
                                <option value="@project.AnalysisDate.Ticks">@project.ProjectName (@project.AnalysisDate.ToString("yyyy-MM-dd HH:mm"))</option>
                            }
                        </select>
                    </div>

                    @if (ComparisonResult != null)
                    {
                        <div class="card mb-3">
                            <div class="card-header">Comparison Results</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="card text-center mb-3">
                                            <div class="card-body">
                                                <h5 class="card-title text-@GetComparisonClass(ComparisonResult.ComplexityChange)">
                                                    @(ComparisonResult.ComplexityChange >= 0 ? "+" : "")@ComparisonResult.ComplexityChange.ToString("N1")
                                                </h5>
                                                <p class="card-text">Complexity Change</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card text-center mb-3">
                                            <div class="card-body">
                                                <h5 class="card-title text-@GetComparisonClass(-ComparisonResult.MaintainabilityChange)">
                                                    @(ComparisonResult.MaintainabilityChange >= 0 ? "+" : "")@ComparisonResult.MaintainabilityChange.ToString("N1")
                                                </h5>
                                                <p class="card-text">Maintainability Change</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card text-center mb-3">
                                            <div class="card-body">
                                                <h5 class="card-title text-@GetComparisonClass(ComparisonResult.IssuesChange)">
                                                    @(ComparisonResult.IssuesChange >= 0 ? "+" : "")@ComparisonResult.IssuesChange
                                                </h5>
                                                <p class="card-text">Issues Change</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="alert alert-@ComparisonResult.OverallStatus">
                                    <h5>Overall Assessment</h5>
                                    <p>@ComparisonResult.OverallMessage</p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <p>No previous analysis history available for comparison.</p>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                @if (HistoryProjects.Count > 0)
                {
                    <button type="button" class="btn btn-primary" @onclick="RunComparison">Compare</button>
                }
            </div>
        </div>
    </div>
</div>