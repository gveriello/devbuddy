@using BlazorMonaco.Editor
@using devbuddy.common.Applications
@using devbuddy.plugins.Notes.Models
@using devbuddy.plugins.Notes.Models.Enums
@inherits AppComponentBase<NotesDataModel>

<ModalComponentBase @ref="_deleteModal"
					Title="Conferma eliminazione"
					ModalSize="modal-md"
					OnConfirmCallback="ConfirmDelete">
	<p>Sei sicuro di voler eliminare la nota "<strong>@(SelectedNode?.Title)</strong>"?</p>
	<p>Questa azione non può essere annullata.</p>
</ModalComponentBase>

<div class="Notes-container">
	<div class="row g-0 h-100">
		<div class="col-md-3 notes-sidebar-container">

			<div class="notes-sidebar">
				<div class="notes-header">
					<div class="search-box">
						<input type="text" class="form-control" placeholder="Cerca note..." @bind="SearchQuery" @bind:event="oninput" />
						<i class="fa-solid fa-search search-icon"></i>
					</div>
					<div class="notes-actions">
						<button class="btn btn-sm btn-primary" @onclick="AddNewNoteAsync" title="Nuova nota">
							<i class="fa-solid fa-plus"></i>
						</button>
					</div>
				</div>

				<div class="filter-options mb-2">
					<div class="btn-group btn-group-sm w-100">
						<button class="btn @(FilterType == NoteFilterType.All ? "btn-primary" : "btn-outline-secondary")"
								@onclick="() => SetFilter(NoteFilterType.All)">
							Tutte
						</button>
						<button class="btn @(FilterType == NoteFilterType.Favorites ? "btn-primary" : "btn-outline-secondary")"
								@onclick="() => SetFilter(NoteFilterType.Favorites)">
							<i class="fa-solid fa-star"></i>
						</button>
					</div>
				</div>

				<div class="notes-tags mb-2">
					@if (AllTags.Any())
					{
						<div class="all-tags">
							@foreach (var tag in AllTags)
							{
								<span class="tag-badge @(SelectedTags.Contains(tag) ? "selected" : "")"
									  @onclick="() => ToggleTagFilter(tag)">
									#@tag
								</span>
							}
						</div>
					}
				</div>

				<div class="notes-list">
					@if (!FilteredNotes.Any())
					{
						<div class="no-notes">
							<p>Nessuna nota trovata</p>
						</div>
					}
					else
					{
						@foreach (var note in FilteredNotes)
						{
							<div class="row">
								<div @key="@($"{note.Id}parent")" id="@(note.Id)parent" class="note-item @(Model.LastOpenedNoteId == note.Id ? "selected" : "")" @onclick="() => OnNoteSelectionChangedAsync(note)">
									<div class="note-title">
										<span>@note.Title</span> &nbsp;
										<div hidden="@(!note.IsFavorite)"><i class="fa-solid fa-star favorite-icon"></i></div>

									</div>
									<div id="note-preview" class="note-preview">
										@note.GetPreview()
									</div>
									<div class="note-meta">
										<div class="note-date">@note.ModifiedAt.ToString("dd/MM/yyyy HH:mm")</div>
										<div class="note-type">
											<i class="fa-solid fa-code" hidden="@(note.Type != NoteType.Code)"></i>
											<i class="fa-solid fa-markdown" hidden="@(note.Type != NoteType.Markdown)"></i>
											<i class="fa-solid fa-file-lines" hidden="@(note.Type != NoteType.Text)"></i>
										</div>
									</div>
								</div>
							</div>
						}
					}
				</div>
			</div>
		</div>
		<div class="col-md-9 editor-container">
			<div class="note-editor " disabled="@(SelectedNode is null)">

				<div class="no-note-selected" hidden="@(SelectedNode is not null)">
					<div class="message">
						<i class="fa-solid fa-file-lines fa-3x mb-3"></i>
						<h5>Nessuna nota selezionata</h5>
						<p>Seleziona una nota esistente o creane una nuova</p>
					</div>
				</div>

				@if (SelectedNode != null)
				{
					<div class="editor-header">
						<div class="title-row">
							<input type="text" class="form-control note-title-input"
								   placeholder="Titolo della nota"
								   @bind="SelectedNode.Title"
								   @bind:event="oninput"
								   @onblur="OnTitleChangedAsync" />

							<div class="note-actions">
								<button class="btn btn-success btn-sm" disabled="@(!ModelHasChanged)" @onclick="SaveDataModelAsync" @attributes="@Tooltip("Salva")" title="Salva le modifiche">
									<i class="fa-solid fa-floppy-disk"></i>
								</button>

								<button type="button" class="btn btn-sm @(SelectedNode.IsFavorite ? "btn-warning" : "btn-outline-warning")"
										@onclick="ToggleFavorite"
										@attributes="@Tooltip("Aggiungi ai preferiti")">
									<i class="fa-solid fa-star"></i>
								</button>

								<button type="button" class="btn btn-sm btn-outline-danger"
										@onclick="DeleteNote"
										@attributes="@Tooltip("Elimina nota")">
									<i class="fa-solid fa-trash"></i>
								</button>
							</div>
						</div>

						<div class="type-and-tags-row">
							<div class="note-type-selector">
								<select class="form-select" @bind="SelectedNode.Type">
									<option value="@NoteType.Text">Testo semplice</option>
									<option value="@NoteType.Code">Codice</option>
									<option value="@NoteType.Markdown">Markdown</option>
								</select>
							</div>

							@if (SelectedNode.Type == NoteType.Code)
							{
								<div class="language-selector">
									<select class="form-select" @bind="SelectedNode.Language" @bind:event="oninput" @onchange="OnLanguageChanged">
										<option value="plaintext">Testo</option>
										<option value="csharp">C#</option>
										<option value="javascript">JavaScript</option>
										<option value="html">HTML</option>
										<option value="css">CSS</option>
										<option value="sql">SQL</option>
										<option value="json">JSON</option>
										<option value="xml">XML</option>
										<option value="php">PHP</option>
										<option value="java">Java</option>
										<option value="python">Python</option>
									</select>
								</div>
							}

							<div class="tags-input">
								<div class="input-group">
									<input type="text" class="form-control"
										   placeholder="Aggiungi tag"
										   @bind="NewTag"
										   @onkeydown="HandleTagInputKeyDown" />
									<button class="btn btn-outline-secondary" type="button" @onclick="AddTag">
										<i class="fa-solid fa-plus"></i>
									</button>
								</div>

								<div class="tags-container">
									@foreach (var tag in SelectedNode.Tags)
									{
										<span id="@($"{SelectedNode.Id}{tag}")" class="badge bg-secondary tag-badge">
											#@tag
											<span class="remove-tag" @onclick="() => RemoveTag(tag)">×</span>
										</span>
									}
								</div>
							</div>
						</div>
					</div>
				}

				<StandaloneCodeEditor @ref="_codeEditor" OnDidChangeModelContent="@OnContentChanged" ConstructionOptions="EditorConstructionOptions" CssClass="editor-content" />

				@if (SelectedNode != null)
				{
					<div class="editor-footer">
						<span class="note-stats">
							@SelectedNode.Content.Length caratteri | Ultima modifica: @SelectedNode.ModifiedAt.ToString("dd/MM/yyyy HH:mm")
						</span>
					</div>
				}

			</div>

		</div>
	</div>
</div>

<style>
	.Notes-container {
		height: calc(100vh - 100px);
		display: flex;
		flex-direction: column;
	}

	.notes-sidebar-container {
		background-color: #f8f9fa;
		border-right: 1px solid #dee2e6;
		overflow-y: hidden;
		height: 100%;
	}

	.notes-sidebar {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.notes-header {
		padding: 10px;
		border-bottom: 1px solid #dee2e6;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.search-box {
		position: relative;
		flex-grow: 1;
		margin-right: 10px;
	}

	.search-icon {
		position: absolute;
		right: 10px;
		top: 50%;
		transform: translateY(-50%);
		color: #6c757d;
	}

	.notes-list {
		flex-grow: 1;
		overflow-y: auto;
		padding: 10px;
	}

	.no-notes {
		text-align: center;
		padding: 20px;
		color: #6c757d;
	}

	.note-item {
		padding: 10px;
		margin-bottom: 10px;
		border-radius: 5px;
		background-color: white;
		border: 1px solid #dee2e6;
		cursor: pointer;
		transition: all 0.2s;
	}

		.note-item:hover {
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
		}

		.note-item.selected {
			border-left: 4px solid #0d6efd;
			background-color: #f0f7ff;
		}

	.note-title {
		font-weight: bold;
		margin-bottom: 5px;
		display: flex;
		align-items: center;
	}

	.favorite-icon {
		color: #ffc107;
		margin-right: 5px;
	}

	.note-preview {
		font-size: 0.8rem;
		color: #6c757d;
		margin-bottom: 5px;
		overflow: hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
	}

	.note-meta {
		display: flex;
		justify-content: space-between;
		font-size: 0.75rem;
		color: #adb5bd;
	}

	.filter-options {
		padding: 10px;
	}

	.notes-tags {
		padding: 0 10px;
	}

	.all-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 5px;
	}

	.tag-badge {
		background-color: #e9ecef;
		color: #495057;
		padding: 3px 6px;
		border-radius: 10px;
		font-size: 0.75rem;
		cursor: pointer;
	}

		.tag-badge.selected {
			background-color: #0d6efd;
			color: white;
		}

	.editor-container {
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.note-editor {
		display: flex;
		flex-direction: column;
		height: 100%;
		padding: 15px;
	}

	.editor-header {
		margin-bottom: 15px;
	}

	.title-row {
		display: flex;
		margin-bottom: 10px;
	}

	.note-title-input {
		flex-grow: 1;
		font-weight: bold;
		font-size: 1.25rem;
		margin-right: 10px;
	}

	.note-actions {
		display: flex;
		gap: 5px;
	}

	.type-and-tags-row {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
		margin-bottom: 10px;
	}

	.note-type-selector,
	.language-selector {
		width: 150px;
	}

	.tags-input {
		flex-grow: 1;
		min-width: 200px;
	}

	.tags-container {
		display: flex;
		flex-wrap: wrap;
		gap: 5px;
		margin-top: 10px;
	}

	.remove-tag {
		margin-left: 5px;
		cursor: pointer;
	}

	.editor-content {
		flex-grow: 1;
		margin-bottom: 15px;
	}

	.content-editor {
		height: 100%;
		resize: none;
		font-family: 'Courier New', Courier, monospace;
	}

	.editor-footer {
		border-top: 1px solid #dee2e6;
		padding-top: 10px;
		color: #6c757d;
		font-size: 0.8rem;
	}

	.no-note-selected {
		display: flex;
		height: 100%;
		align-items: center;
		justify-content: center;
		color: #6c757d;
	}

		.no-note-selected .message {
			text-align: center;
		}
</style>