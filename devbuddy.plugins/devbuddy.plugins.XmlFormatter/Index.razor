@using devbuddy.common.Applications
@using devbuddy.common.Services
@inherits AppComponentBase

<div class="container mt-4">
    <h2 class="mb-4">XML Formatter</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Input XML</h5>
                    <div>
                        <button class="btn btn-primary btn-sm" @onclick="PasteFromClipboard">
                            <i class="fa-solid fa-paste"></i>
                        </button>
                        <button class="btn btn-danger btn-sm" @onclick="ClearInput">
                            <i class="fa-solid fa-eraser"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <textarea @bind="InputXml" @bind:event="oninput" @onkeyup="FormatXml"
                              class="form-control" rows="15" placeholder="Inserisci qui il tuo XML"></textarea>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Output XML formattato</h5>
                    <div>
                        <button class="btn btn-secondary btn-sm" @onclick="CopyToClipboard">
                            <i class="fa-solid fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <textarea @bind="OutputXml" class="form-control" rows="15" readonly></textarea>
                    <div class="mt-2 text-muted small">
                        <span title="Dimensione in caratteri">Dimensione: @XmlSize caratteri</span> |
                        <span title="Profondità massima dell'oggetto">Profondità: @XmlDepth</span> |
                        <span title="Numero di elementi">Elementi: @XmlElements</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="autoFormat"
                               checked="@AutoFormat"
                               @onchange="@(e => ToggleAutoFormat(e.Value))">
                        <label class="form-check-label" for="autoFormat">
                            Formattazione automatica
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="removeWhitespace"
                               checked="@RemoveWhitespace"
                               @onchange="@(e => ToggleRemoveWhitespace(e.Value))">
                        <label class="form-check-label" for="removeWhitespace">
                            Rimuovi spazi bianchi
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="omitDeclaration"
                               checked="@OmitDeclaration"
                               @onchange="@(e => ToggleOmitDeclaration(e.Value))">
                        <label class="form-check-label" for="omitDeclaration">
                            Ometti dichiarazione XML
                        </label>
                    </div>
                    <button class="btn btn-primary ms-3" @onclick="FormatXml" disabled="@AutoFormat">
                        Formatta
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mt-3">
            <strong>Errore:</strong> @ErrorMessage
        </div>
    }
</div>